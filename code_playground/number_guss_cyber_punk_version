    <script>
        // Custom Cursor Movement
        const cursor = document.getElementById('cursor');
        const cursorTrail = document.getElementById('cursor-trail');
        
        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';
            
            setTimeout(() => {
                cursorTrail.style.left = e.clientX + 'px';
                cursorTrail.style.top = e.clientY + 'px';
            }, 50);
        });
        
        // Cursor grow on hover over interactive elements
        const interactiveElements = document.querySelectorAll('button');
        interactiveElements.forEach(el => {
            el.addEventListener('mouseenter', () => {
                cursor.style.width = '40px';
                cursor.style.height = '40px';
                cursor.style.borderColor = '#FF007A';
            });
            el.addEventListener('mouseleave', () => {
                cursor.style.width = '20px';
                cursor.style.height = '20px';
                cursor.style.borderColor = '#00FFFF';
            });
        });
        
        // Create click ripple effect
        document.addEventListener('click', (e) => {
            const ripple = document.createElement('div');
            ripple.style.position = 'fixed';
            ripple.style.left = e.clientX + 'px';
            ripple.style.top = e.clientY + 'px';
            ripple.style.width = '0';
            ripple.style.height = '0';
            ripple.style.borderRadius = '50%';
            ripple.style.border = '2px solid #00FFFF';
            ripple.style.pointerEvents = 'none';
            ripple.style.zIndex = '9997';
            ripple.style.animation = 'rippleEffect 0.6s ease-out';
            document.body.appendChild(ripple);
            
            setTimeout(() => ripple.remove(), 600);
        });
        
        // Add ripple animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes rippleEffect {
                0% { width: 0; height: 0; opacity: 1; }
                100% { width: 100px; height: 100px; opacity: 0; transform: translate(-50px, -50px); }
            }
        `;
        document.head.appendChild(style);
        
        // Random system stats update
        setInterval(() => {
            const cpuUsage = document.getElementById('cpu-usage');
            const memUsage = document.getElementById('mem-usage');
            if (cpuUsage) cpuUsage.textContent = Math.floor(Math.random() * 30 + 70) + '%';
            if (memUsage) memUsage.textContent = Math.floor(Math.random() * 30 + 50) + '%';
        }, 2000);
        
        // Matrix-style falling characters effect
        function createMatrixRain() {
            const chars = '01„Ç¢„Ç§„Ç¶„Ç®„Ç™„Ç´„Ç≠„ÇØ„Ç±„Ç≥„Çµ„Ç∑„Çπ„Çª„ÇΩ„Çø„ÉÅ„ÉÑ„ÉÜ„Éà';
            const matrixChar = document.createElement('div');
            matrixChar.textContent = chars[Math.floor(Math.random() * chars.length)];
            matrixChar.style.position = 'fixed';
            matrixChar.style.left = Math.random() * 100 + '%';
            matrixChar.style.top = '-20px';
            matrixChar.style.color = Math.random() > 0.5 ? '#00FFFF' : '#FF007A';
            matrixChar.style.fontSize = '14px';
            matrixChar.style.opacity = '0.3';
            matrixChar.style.fontFamily = 'monospace';
            matrixChar.style.zIndex = '0';
            matrixChar.style.pointerEvents = 'none';
            matrixChar.style.animation = `matrixFall ${3 + Math.random() * 3}s linear`;
            document.body.appendChild(matrixChar);
            
            setTimeout(() => matrixChar.remove(), 6000);
        }
        
        const matrixStyle = document.createElement('style');
        matrixStyle.textContent = `
            @keyframes matrixFall {
                0% { transform: translateY(0); opacity: 0; }
                10% { opacity: 0.3; }
                90% { opacity: 0.3; }
                100% { transform: translateY(100vh); opacity: 0; }
            }
        `;
        document.head.appendChild(matrixStyle);
        
        setInterval(createMatrixRain, 200);
        
        // Glitch effect on random intervals
        function triggerGlitch() {
            const box = document.querySelector('.box');
            box.style.animation = 'none';
            setTimeout(() => {
                box.style.animation = 'boxPulse 4s infinite, neonFlicker 0.15s infinite alternate, glitchBox 0.3s';
                setTimeout(() => {
                    box.style.animation = 'boxPulse 4s infinite, neonFlicker 0.15s infinite alternate';
                }, 300);
            }, 10);
        }
        
        setInterval(triggerGlitch, 8000 + Math.random() * 7000);
        
        // Game state variables
        let system_num = Math.floor(Math.random() * 100) + 1; // Random number between 1-100
        let attempts = 0;
        let bestScore = localStorage.getItem('bestScore') || null;
        let gameOver = false;

        // DOM elements
        const inp_num = document.getElementById("inp_num");
        const msgBox = document.getElementById("msg_box");
        const message = document.getElementById("message");
        const attemptsDisplay = document.getElementById("attempts");

        // Update best score display
        updateAttemptsDisplay();

        // Allow Enter key to submit
        inp_num.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                Guss_the_num();
            }
        });

        function Guss_the_num() {
            if (gameOver) {
                resetGame();
                return;
            }

            const userGuess = parseInt(inp_num.value);

            // Validation
            if (!userGuess || userGuess < 1 || userGuess > 100) {
                showMessage("‚ö†Ô∏è Please enter a valid number between 1 and 100!", "error");
                return;
            }

            attempts++;
            updateAttemptsDisplay();

            // Check the guess
            if (userGuess === system_num) {
                // Success!
                gameOver = true;
                showMessage(`üéâ Congratulations! You got it in ${attempts} ${attempts === 1 ? 'attempt' : 'attempts'}! The number was ${system_num}!`, "success");
                
                // Update best score
                if (!bestScore || attempts < bestScore) {
                    bestScore = attempts;
                    localStorage.setItem('bestScore', bestScore);
                    message.innerHTML += "<br>üèÜ New Best Score!";
                }
                
                message.innerHTML += "<br>Click GO to play again!";
                inp_num.value = '';
                updateAttemptsDisplay();
                
            } else if (userGuess < system_num) {
                // Too low
                const difference = system_num - userGuess;
                if (difference <= 5) {
                    showMessage(`üî• So close! Go HIGHER! You're very hot!`, "hint");
                } else if (difference <= 15) {
                    showMessage(`üìà Too low! Go HIGHER! Getting warm...`, "hint");
                } else {
                    showMessage(`‚¨ÜÔ∏è Too low! Try a much HIGHER number!`, "error");
                }
                
            } else {
                // Too high
                const difference = userGuess - system_num;
                if (difference <= 5) {
                    showMessage(`üî• So close! Go LOWER! You're very hot!`, "hint");
                } else if (difference <= 15) {
                    showMessage(`üìâ Too high! Go LOWER! Getting warm...`, "hint");
                } else {
                    showMessage(`‚¨áÔ∏è Too high! Try a much LOWER number!`, "error");
                }
            }

            // Clear input and focus for next attempt
            inp_num.value = '';
            
        }

        function showMessage(text, type) {
            message.textContent = text;
            msgBox.className = 'msg_box ' + type;
        }

        function updateAttemptsDisplay() {
            attemptsDisplay.textContent = `Attempts: ${attempts} | Best Score: ${bestScore || '--'}`;
        }

        function resetGame() {
            system_num = Math.floor(Math.random() * 100) + 1;
            attempts = 0;
            gameOver = false;
            showMessage("üéÆ New game started! I'm thinking of a number between 1 and 100. Can you guess it?", "");
            updateAttemptsDisplay();
            inp_num.value = '';
            
        }

        
    </script>
</body>
</html>
